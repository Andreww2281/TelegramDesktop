<Window x:Class="Telegram.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Telegram"
        xmlns:entities="clr-namespace:Telegram.WPF_Entities"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="800" Width="1000"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        ResizeMode="CanResizeWithGrip"
        x:Name="MainWin"
        MinHeight="500" MinWidth="700">


        <Canvas x:Name="MainCanvas" Background="Black">
            <Canvas.Resources>

                <Style TargetType="TextBox" x:Key="SearchBoxStyle">
                    <Style.Setters>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TextBox">
                                    <Border CornerRadius="3" Background="#3D444B">

                                        <TextBox BorderThickness="0"
                                             Background="Transparent"
                                             Foreground="White"
                                             FontSize="20"
                                             VerticalContentAlignment="Center"
                                             CaretBrush="White"/>

                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style.Setters>
                </Style>

                <Style TargetType="Button">
                    <Style.Setters>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border  x:Name="border"
                                         BorderThickness="0">

                                        <TextBlock Text="{TemplateBinding Property=Content}"
                                               Foreground="White" 
                                               FontSize="{TemplateBinding FontSize}"
                                               TextAlignment="Center"
                                               VerticalAlignment="Center"/>
                                    </Border>

                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="true">
                                            <Setter TargetName="border"
                                                Property="Background"
                                                Value="#313B43"/>
                                        </Trigger>

                                    </ControlTemplate.Triggers>

                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style.Setters>
                </Style>


                <ControlTemplate TargetType="Button" x:Key="BTNClose">

                    <Border  x:Name="BTNClose"
                         BorderThickness="0">

                        <TextBlock Text="{TemplateBinding Property=Content}"
                               Foreground="White" 
                               FontSize="{TemplateBinding FontSize}"
                               TextAlignment="Center"
                               VerticalAlignment="Center"/>
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="true">
                            <Setter TargetName="BTNClose"
                                Property="Background"
                                Value="Red"/>
                        </Trigger>
                    </ControlTemplate.Triggers>

                </ControlTemplate>

                <ControlTemplate TargetType="Button" x:Key="BaseButtonTopPanel">

                    <Border  x:Name="border"
                         Height="{TemplateBinding Height}"
                         Width="{TemplateBinding Width}"
                         Background="Transparent"
                         BorderThickness="0">

                        <TextBlock Text="{TemplateBinding Property=Content}"
                               x:Name="textblock"
                               Foreground="White"
                               FontSize="{TemplateBinding FontSize}"
                               TextAlignment="Center"
                               VerticalAlignment="Center"/>
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="true">

                            <Setter TargetName="border"
                                Property="Background"
                                Value="#434D57"/>

                            <Setter TargetName="textblock"
                                Property="Foreground"
                                Value="White"/>

                        </Trigger>
                    </ControlTemplate.Triggers>

                </ControlTemplate>
                <SolidColorBrush x:Key="GreyBrush">#f0f0f0</SolidColorBrush>
            <SolidColorBrush x:Key="BlueBrush">#50B4FA</SolidColorBrush>
            <SolidColorBrush x:Key="LightBlueBrush">#72D4FA</SolidColorBrush>
            <SolidColorBrush x:Key="MsgBgBrush">#285078</SolidColorBrush>
            </Canvas.Resources>

            <Grid x:Name="MainGrid"
                  Width="{Binding ElementName=MainWin, Path=Width, UpdateSourceTrigger=PropertyChanged}"
                  Height="{Binding ElementName=MainWin, Path=Height, UpdateSourceTrigger=PropertyChanged}">

                <Grid.RowDefinitions>
                    <RowDefinition Height="24"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.ColumnSpan="5"
                            x:Name="TopPanel"
                            Background="#3A4047"
                            MouseLeftButtonDown="TopPanel_MouseLeftButtonDown_1">

                        <DockPanel>
                            <Button Content="✖"
                                    DockPanel.Dock="Right"
                                    Width="20"
                                    BorderThickness="0"
                                    x:Name="BTNClose"
                                    Click="BTNClose_Click"/>

                            <Button Content="▭"
                                DockPanel.Dock="Right"
                                Width="20"
                                BorderThickness="0"
                                x:Name="BTNAllScreen"
                                Click="BTNFullScreen_Click"/>

                            <Button Content="_"
                                DockPanel.Dock="Right"
                                Width="20"
                                BorderThickness="0"
                                x:Name="BTNHiDEWindow"
                                Click="BTNHiDEWindow_Click"/>

                            <TextBlock Text="Telegram"
                                   Margin="10, 0, 0, 0"
                                   FontSize="10"
                                   VerticalAlignment="Center"
                                   Foreground="White"/>
                        </DockPanel>
                    </Border>
                </Grid>

                <Grid Grid.Row="1"
                  PreviewMouseDown="HideLeftMenu">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="70" x:Name="ColumnLeftPanel"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*" x:Name="ColumnMain"/>
                        <!--<ColumnDefinition Width="Auto" x:Name="ColumnSpliter"/>-->
                        <ColumnDefinition Width="Auto" x:Name="ColumnRightMenu"/>
                    </Grid.ColumnDefinitions>

                    <!--<GridSplitter Grid.Column="3"
                              Width="4"
                              BorderThickness="5"
                              BorderBrush="#313B43"
                              x:Name="Spliter" />-->

                    <StackPanel Grid.Column="0"
                            Orientation="Vertical"
                            Background="#19191D"
                            Grid.RowSpan="2">

                        <Button Height="60"
                            Width="70"
                            FontSize="30"
                            x:Name="BTNOpenLeftMenu"
                            Click="BTNOpenLeftMenu_Click"
                            Content="8"/>

                        <Button Height="60"
                            Width="70"
                            FontSize="30"
                            Content="9"/>

                        <Button Height="60"
                            Width="70"
                            FontSize="30"
                            Content="10"/>

                        <Button Height="60"
                            Width="70"
                            FontSize="30"
                            Content="11"/>

                        <Button Height="60"
                            Width="70"
                            FontSize="30"
                            Content="12"/>

                        <Button Height="60"
                            Width="70"
                            FontSize="30"
                            Content="13"/>

                    </StackPanel>

                    <Grid Grid.Column="1"
                      Background="#282E33"
                      Grid.RowSpan="2"
                      MinWidth="240"
                      MaxWidth="250">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="45"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0"
                              Grid.Column="0"
                              Margin="3">

                            <TextBox Margin="2"
                                     Style="{StaticResource SearchBoxStyle}"/>
                        </Grid>
                    </Grid>

                    <Grid Grid.Column="2"
                      Background="#282E33"
                      x:Name="MainContent"
                      SizeChanged="MainContent_SizeChanged"
                      MinWidth="300">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="45"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="40"/>
                        </Grid.RowDefinitions>


                        <Grid Grid.Row="0" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition  Width="200"></ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Vertical" Grid.Column="0">

                                <TextBlock Margin="4"
                                           Foreground="White"
                                           x:Name="TBName"/>

                                <TextBlock Margin="4"
                                           Foreground="White"
                                           x:Name="TBDateLeft"/>

                            </StackPanel>

                            <UniformGrid Grid.Column="2" Columns="4">

                                <Button Grid.Column="0"
                                        Foreground="White"
                                        FontSize="30"
                                        Content="1"
                                        Width="45"/>


                                <Button Grid.Column="1"
                                        Foreground="White"
                                        FontSize="30"
                                        Content="2"
                                        Width="45"/>


                                <Button Grid.Column="2"
                                        x:Name="BTN"
                                        Foreground="White" 
                                        FontSize="30" 
                                        Width="45"
                                        Content="3"/>


                                <Button x:Name="ShowOrOpenRightMenu"
                                        Click="ShowOrOpenRightMenu_Click"
                                        Foreground="White"
                                        FontSize="30"
                                        Content="4"
                                        Grid.Column="3"
                                        Width="45"/>

                            </UniformGrid>
                        </Grid>


                        <ListBox ItemsSource="{Binding Messages}" Background="#19191D"
                             BorderThickness="0"
                             Grid.Row="1"
                             IsHitTestVisible="False">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                <DataTemplate.Resources>
                                    <entities:IsLastMessageConverter x:Key="last" />
                                </DataTemplate.Resources>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <!--Аватар пользователя-->
                                    <ContentControl x:Name="userIcon" Grid.Column="0" VerticalAlignment="Bottom">
                                        <ContentControl.Style>
                                            <Style TargetType="ContentControl">
                                                <Style.Resources>
                                                    <entities:NotNullConverter x:Key="notnull" />
                        
                                                </Style.Resources>
                                                <Style.Setters>
                                                    
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate>
                                                                <Border 
                                                                            Grid.Column="0" Grid.Row="1"
                                                                            Height="32" Width="32" 
                                                                            Margin="0,0,5,0" 
                                                                            CornerRadius="360"
                                                                            Background="HotPink">
                                                                    <TextBlock 
                                                                                VerticalAlignment="Center" HorizontalAlignment="Center"
                                                                                Text="{Binding FromUser.Name[0]}" Foreground="{StaticResource GreyBrush}" FontSize="20">
                                                                    </TextBlock>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style.Setters>
                                                
                                                <Style.Triggers>
                                                    <DataTrigger Value="False" Binding="{Binding ShowAvatar}">
                                                        <Setter Property="Visibility" Value="Hidden"/>
                                                    </DataTrigger>
                                                    <DataTrigger Value="True" Binding="{Binding FromUser.Images[0], Converter={StaticResource notnull}}">
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate>
                                                                    <Border Grid.Column="0" Grid.Row="1" Height="32" Width="32" Margin="0,0,5,0" VerticalAlignment="Center" CornerRadius="360">
                                                                        <Image Source="{Binding FromUser.Images[0].ImageSource}">
                                                                            <Image.Clip>
                                                                                <EllipseGeometry Center="16,16" RadiusX="16" RadiusY="16"/>
                                                                            </Image.Clip>
                                                                        </Image>
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ContentControl.Style>
                                    </ContentControl>
                                    <!--Тело сообщения-->
                                    <Border Background="{StaticResource MsgBgBrush}" CornerRadius="8" Grid.Column="1">
                                        <Grid Margin="9" >
                                            <Grid.RowDefinitions>
                                                <!--Имя пользователя, от которого переслано сообщение(может не быть)-->
                                                <RowDefinition x:Name="resend" Height="Auto"></RowDefinition>
                                                <!--Имя пользователя, пославшего сообщение(может не быть)-->
                                                <RowDefinition x:Name="author" Height="0"></RowDefinition>
                                                <RowDefinition x:Name="response" Height="Auto"></RowDefinition>
                                                <RowDefinition Height="Auto"></RowDefinition>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <!--Для иконки-->
                                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                <ColumnDefinition Width="*"></ColumnDefinition>
                                            </Grid.ColumnDefinitions>


                                            <TextBlock  Margin="0,0,0,2" Text="{Binding ResendUser.Name, StringFormat={}переслано от {0}}" 
                                                   Foreground="{StaticResource LightBlueBrush}" FontSize="12"
                                                       Grid.Row="0"
                                                       Grid.Column="1"/>
                                            <TextBlock 
                                                Grid.Row="1"
                                                Grid.Column="1"
                                                FontSize="12" Foreground="LightYellow" Text="{Binding FromUser.Name}" Margin="0,0,0,2"/>
                                            <!--Сообщение, на которое отвечаем-->
                                            <Grid PreviewMouseDown="Responce_OnClick" Grid.Row="2" Grid.Column="1" Margin="0,2,0,5">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <GridSplitter Grid.Column="0" Width="2" Margin="0,0,8,0" HorizontalAlignment="Stretch" Background="{StaticResource BlueBrush}"/>
                                                <StackPanel Grid.Column="1">
                                                    <TextBlock
                                                        Grid.Row="1"
                                                        Grid.Column="1"
                                                        FontSize="12" Foreground="{StaticResource LightBlueBrush}" 
                                                        Text="{Binding RespondingTo.FromUser.Name}"
                                                        Margin="0,0,0,5"/>
                                                    <TextBlock FontSize="13" Foreground="{StaticResource GreyBrush}" Text="{Binding RespondingTo.Text}"/>
                                                </StackPanel>
                                            </Grid>
                                            <StackPanel Grid.Column="1" Grid.Row="3" >
                                                <TextBlock FontSize="13" Foreground="{StaticResource GreyBrush}" Text="{Binding Text}"></TextBlock>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </Grid>
                                <DataTemplate.Triggers>
                                    <DataTrigger Binding="{Binding RespondingTo}" Value="{x:Null}">
                                        <Setter TargetName="response" Property="Height" Value="0"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding ResendUser}" Value="{x:Null}">
                                        <Setter TargetName="resend" Property="Height" Value="0" />
                                        <Setter TargetName="author" Property="Height" Value="Auto" />
                                    </DataTrigger>
                                    <!--<DataTrigger Value="True">
                                        <DataTrigger.Binding>
                                            <MultiBinding Converter="{StaticResource last}">
                                                <Binding Path="Messages" RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType=local:MainWindow}"/>
                                                <Binding Path="Self"/>
                                            </MultiBinding>
                                        </DataTrigger.Binding>
                                        <Setter TargetName="userIcon" Property="Visibility" Value="Visible"/>
                                    </DataTrigger>-->
                                </DataTemplate.Triggers>
                                    
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <Grid Grid.Row="2" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="40"/>
                            </Grid.ColumnDefinitions>

                            <TextBox Grid.Column="1"
                                 Background="#282E33"
                                 TextAlignment="Left"
                                 VerticalAlignment="Center"
                                 FontSize="20"
                                 Foreground="White"
                                 BorderThickness="0"/>

                            <Button Grid.Column="2"
                                Background="#282E33"
                                FontSize="30"
                                Content="6"/>


                            <Button Grid.Column="3"
                                Background="#282E33"
                                FontSize="30"
                                Content="7"/>

                        </Grid>
                    </Grid>

                    <Grid x:Name="RightMenu" Grid.Column="3" Visibility="Hidden" Width="280"></Grid>
                </Grid >
            </Grid>

            <Border Margin="-280, 0, 0, 0"
                Width="280"
                Height="{Binding ElementName=MainWin, Path=Height}"
                x:Name="LeftMenu"
                Background="#282E33">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="130"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Background="#1E0096">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                    </Grid>

                    <Grid Grid.Row="1">
                        <StackPanel Orientation="Vertical">

                            <Button Height="40"
                                Content="Создать группу"/>

                            <Button Height="40"
                                Content="Создать канал"/>

                            <Button Height="40"
                                Content="Контакты"/>

                            <Button Height="40" 
                                Content="Звонки"/>

                            <Button Height="40"
                                Content="Настройки"/>

                        </StackPanel>
                    </Grid>
                </Grid>

            </Border>
        </Canvas>
</Window>